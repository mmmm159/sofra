<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_home_client_restaurant_details_pager_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@color/lightGrey"
        app:tabTextColor="@color/lightMagenta"
        app:tabIndicatorColor="@color/lightMagenta"
        app:tabIndicatorHeight="3dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_home_client_restaurant_details_pager_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_home_client_restaurant_details_pager_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>