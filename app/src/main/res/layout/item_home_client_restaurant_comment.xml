<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/dim_margin_horizontal_inside_10"
    android:layout_marginEnd="@dimen/dim_margin_horizontal_inside_10"
    android:layout_marginTop="@dimen/dim_margin_vertical_10"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_comment">
    <ImageView
        android:id="@+id/item_home_client_restaurant_comment_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_emoji_smile_magenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dim_margin_horizontal_inside_10"/>
    <TextView
        android:id="@+id/item_home_client_restaurant_comment_txt_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="mohamed ali"
        android:layout_marginStart="@dimen/dim_margin_horizontal_inside_10"
        android:layout_marginTop="@dimen/dim_margin_top_inside_5"
        />
    <TextView
        android:id="@+id/item_home_client_restaurant_comment_txt_view_comment_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_home_client_restaurant_comment_emoji"
        app:layout_constraintTop_toBottomOf="@id/item_home_client_restaurant_comment_txt_view_name"
        android:textColor="@color/black"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:layout_marginStart="@dimen/dim_margin_horizontal_inside_10"
        />

</androidx.constraintlayout.widget.ConstraintLayout>