<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dim_margin_horizontal_inside_10"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_home_client_restaurant_category_img"
        android:layout_width="@dimen/dim_emoji_30"
        android:layout_height="@dimen/dim_emoji_30"

        android:layout_gravity="center"
        android:src="@drawable/auth_background"/>
    <TextView
        android:id="@+id/item_home_client_restaurant_category_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pizza"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"/>



</LinearLayout>